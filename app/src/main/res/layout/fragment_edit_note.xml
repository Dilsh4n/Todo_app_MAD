<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        tools:context=".UpdateNoteFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/editNoteHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins"
                android:text="Edit Note."
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="24sp" />
            <EditText
                android:id="@+id/editNoteTitle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter the title"
                android:padding="12dp"
                android:textSize="20sp"
                android:layout_below="@id/editNoteHeading"
                android:background="@drawable/red_bordered"
                android:layout_marginTop="16dp"
                android:maxLines="1"
                android:fontFamily="@font/poppins"/>
            <!-- date field-->
            <EditText
                android:id="@+id/editNoteDate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/red_bordered"
                android:focusable="false"
                android:fontFamily="@font/poppins"
                android:hint="Select date"
                android:inputType="none"
                android:onClick="showDatePicker"
                android:padding="12dp"
                android:textSize="18sp" />

            <!-- Time Field -->
            <EditText
                android:id="@+id/editNoteTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select time"
                android:inputType="none"
                android:padding="12dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins"
                android:background="@drawable/red_bordered"
                android:layout_below="@id/addNoteDate"
                android:layout_marginTop="12dp"
                android:focusable="false"
                android:onClick="showTimePicker"/>
            <EditText
                android:id="@+id/editNoteDesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter the description"
                android:gravity="top"
                android:padding="12dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins"
                android:background="@drawable/red_bordered"
                android:layout_below="@id/editNoteTitle"
                android:layout_marginTop="12dp" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/editNoteFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:backgroundTint="@color/red"
            android:tintMode="@color/white"
            android:src="@drawable/baseline_done_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="editFab" />
    </RelativeLayout>
</layout>